        <ImageView android:id="@+id/action_previous" android:src="@drawable/ic_action_previous" style="@style/toolbar_action"
                   android:contentDescription="@string/prev"/>
    </FrameLayout>
    <FrameLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
        <ImageView android:id="@+id/action_next" android:src="@drawable/ic_action_next" style="@style/toolbar_action"
                   android:contentDescription="@string/next"/>
    </FrameLayout>
    <FrameLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
        <ImageView android:id="@+id/action_share" android:src="@drawable/ic_action_share" style="@style/toolbar_action"
                   android:contentDescription="@string/share"/>
