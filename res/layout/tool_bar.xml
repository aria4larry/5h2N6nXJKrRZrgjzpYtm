<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"  style="@style/toolbar_style"
              android:baselineAligned="false">
    <FrameLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
        <ImageView android:id="@+id/action_favor" android:src="@drawable/ic_action_favor" style="@style/toolbar_action"
                   android:contentDescription="@string/fav"/>
    </FrameLayout>
    <FrameLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
        <ImageView android:id="@+id/action_write" android:src="@drawable/ic_action_write" style="@style/toolbar_action"
                   android:contentDescription="@string/write"/>
